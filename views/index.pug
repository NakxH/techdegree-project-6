extends layout.pug

block content

  article.portfolio-intro
  
    h1 My Portfolio

    p Here are a list of all the projects I have completed, feel free to take a look!

  article.portfolio-project-thumbs
    .projects-box.box.grid

      each project in projects
        .cell
          a(href=`/project/` + project.id)
            img.thumbnail(src=project.image_urls[0], alt=project.project_name + ` Thumbnail`)
            h5= project.project_names
        

